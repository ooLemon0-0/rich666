# /etc/nginx/conf.d/rich666.conf
#
# 使用服务器 IP 访问时，将 server_name 改为你的公网 IP。
# 如果你后续绑定域名并启用 HTTPS，可再补 443 与证书配置。

server {
  listen 80;
  server_name <YOUR_SERVER_IP>;

  # 建议将前端构建产物复制到该目录：
  # sudo mkdir -p /var/www/rich666/web
  # sudo cp -r apps/web/dist/* /var/www/rich666/web/
  root /var/www/rich666/web;
  index index.html;

  # 前端 SPA 路由兜底
  location / {
    try_files $uri $uri/ /index.html;
  }

  # 可选 API 前缀反代（若后端后续加 REST API）
  location /api/ {
    proxy_pass http://127.0.0.1:3000;
    proxy_http_version 1.1;
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
  }

  # Socket.IO 反代（支持 websocket upgrade）
  location /socket.io/ {
    proxy_pass http://127.0.0.1:3000/socket.io/;
    proxy_http_version 1.1;
    proxy_set_header Upgrade $http_upgrade;
    proxy_set_header Connection "upgrade";
    proxy_set_header Host $host;
    proxy_set_header X-Real-IP $remote_addr;
    proxy_set_header X-Forwarded-For $proxy_add_x_forwarded_for;
    proxy_set_header X-Forwarded-Proto $scheme;
    proxy_read_timeout 600s;
  }
}
